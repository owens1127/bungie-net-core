{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "sourceMap": false,
    "strictNullChecks": true,
    "declaration": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "incremental": true,

    "emitDeclarationOnly": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "generator", "build"]
}
