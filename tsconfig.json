{
  "compilerOptions": {
    "incremental": true,
    "strictNullChecks": true,
    "strict": true,

    "target": "es6",
    "module": "ES6",
    "moduleResolution": "node16",
    "esModuleInterop": true,

    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "outDir": "./lib"
  },
  "include": ["./src/*"],
  "exclude": ["node_modules", "**/__tests__/*", "generator", "build"]
}
