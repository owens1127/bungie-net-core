{
  "include": ["src"],

  "compilerOptions": {
    "outDir": "./lib",

    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "stripInternal": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,

    "strictNullChecks": true,
    "strict": true
  }
}
