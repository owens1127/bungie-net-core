{
  "name": "oodestiny",
  "version": "2.0.1",
  "author": "Owen Simpson",
  "homepage": "https://github.com/owensimpson/oodestiny",
  "description": "An easy way to interact with the Bungie.net API",
  "type": "module",
  "keywords": [
    "Destiny 2",
    "Bungie",
    "TypeScript",
    "REST API"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bugs": "https://github.com/owensimpson/oodestiny/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/owensimpson/oodestiny"
  },
  "scripts": {
    "create-submodule": "git submodule add https://github.com/Bungie-net/api api-src && git submodule init",
    "update-spec": "git submodule update --remote --merge",
    "format": "prettier --config .prettierrc '{generator,src,test}/**/*.ts' --write",
    "lint": "tslint -p tsconfig.lib.json",
    "test": "jest",
    "prepare": "npm run update-spec && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A .",
    "postversion": "git push && git push --tags",
    "build": "sh ./build.sh"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.4.3",
    "@types/jest": "^29.4.0",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^16.11.9",
    "@types/underscore": "^1.11.3",
    "dotenv": "^16.0.3",
    "jest": "^29.4.3",
    "mkdirp": "^1.0.3",
    "openapi3-ts": "^2.0.2",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "ts-json-schema-generator": "^1.2.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2",
    "underscore": "1.13.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "testMatch": [
      "**/**.test.ts"
    ],
    "globalSetup": "<rootDir>/__test__/setup.ts"
  }
}
